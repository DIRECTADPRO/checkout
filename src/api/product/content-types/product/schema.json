{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "theme": {
      "type": "component",
      "repeatable": false,
      "component": "config.theme"
    },
    "checkout": {
      "type": "component",
      "repeatable": false,
      "component": "config.checkout"
    },
    "bump": {
      "type": "component",
      "repeatable": false,
      "component": "config.bump"
    },
    "oto": {
      "type": "component",
      "repeatable": false,
      "component": "config.oto"
    }
  }
}
